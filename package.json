{
  "name": "brackets",
  "version": "0.0.0",
  "description": "Manage and participate in tournaments",
  "main": "index.js",
  "author": "Matthew Trager <mtrager20@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "env NODE_ENV='prod' nodemon index.js",
    "start:dev": "nodemon index.js",
    "prebuild": "rimraf dist",
    "build": "webpack -p --env.prod",
    "prebuild:dev": "rimraf dist",
    "build:dev": "webpack --env.dev",
    "watch:dev": "npm run build:dev -- --watch",
    "dev": "webpack-dev-server --env.dev",
    "lint": "eslint src/js/**/*.js webpack.config.babel.js",
    "test": "karma start",
    "watch:test": "npm test -- --auto-watch --no-single-run",
    "validate": "npm-run-all --parallel built test"
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "express": "^4.15.2",
    "lodash": "^4.17.4",
    "mongoose": "^4.9.4",
    "morgan": "^1.8.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^6.4.1",
    "babel-preset-env": "^1.3.3",
    "babel-preset-react": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.0",
    "eslint-config-standard-react": "^4.3.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-standard": "^3.0.1",
    "karma": "^1.6.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "mocha": "^3.2.0",
    "rimraf": "^2.6.1",
    "webpack": "^2.3.3",
    "webpack-dev-server": "^2.4.2"
  }
}
